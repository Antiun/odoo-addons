<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_sale_order_line_make_partial_invoice" model="ir.ui.view">
            <field name="name">Sales OrderLine Make Partial Invoice</field>
            <field name="model">sale.order.line.make.partial_invoice</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
				<form string="Create partial invoice">
                <separator colspan="4" string="Select percentage for partial invoice" />
	            <group colspan="4" col="2">
					<field name="percentage"/>
				</group>
                <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                <button name="make_partial_invoice" string="Create partial invoice" type="object" icon="terp-gtk-go-back-rtl"/>
            </form>
            </field>
        </record>

        <record id="action_view_sale_order_line_make_partial_invoice" model="ir.actions.act_window">
            <field name="name">Make partial invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.line.make.partial_invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sale_order_line_make_partial_invoice"/>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="sale_order_line_make_partial_invoice">
            <field name="model_id" ref="sale.model_sale_order_line" />
            <field name="object" eval="1" />
            <field name="name">Make partial invoice</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_view_sale_order_line_make_partial_invoice'))" />
            <field name="key">action</field>
            <field name="model">sale.order.line</field>
        </record>
    </data>
</openerp>
